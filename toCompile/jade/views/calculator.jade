.calculator-banner.center-text
  h1.h2 I'm just testing the army calculator!
.margin-10.center-text
  button.btn.btn-primary(ng-click='vm.theLoop()') test
  tabset(justified="true")
    //- units buildings cards      
    tab(heading='Town Hall (config)')
      .box-wrap-around
        .box-wrap-around(ng-repeat='unitType in vm.unitTypes track by $index')
          building-card(ng-repeat='trainer in unitType.trainers track by $index', building='trainer', type='unitType', building-id='$index', watch='vm.theLoop()')
    //- units cards      
    tab(ng-repeat='unitType in vm.unitTypes track by $index', heading='{{unitType.unitsName}}')
      .box-wrap-around
        troop-card(ng-repeat='unit in unitType.units track by $index', unit='unit', trainers='unitType.trainers', watch='vm.theLoop()')