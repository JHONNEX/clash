//- army tab set

tab(ng-repeat='unitType in vm.unitTypes track by $index', heading='{{unitType.name}}')
  .army.box-wrap-around
    .card.box(ng-repeat='unit in unitType.units track by $index')
      //- pre {{unit.lvls}}
      //- pre {{unit.cost}}
      .left-col.col-35
        .card-img.test-frame
          img.img-responsive.img-circle(ng-src="http://gillchristian.com/clash/img/troops/{{unit.unit}}.png")
        .troop-lvl.test-frame.form-group
          label(for='amount') amount
          input.form-control(type='text', name='amount', , ng-model='unit.amount')
        .troop-amount.test-frame.form-group
          label(for='select') lvl
          select.form-control(ng-init='unit.lvl = unit.lvls[0]', ng-model='unit.lvl', ng-options='lvl for lvl in unit.lvls', name='select')
          //- input.form-control(type='text')
      .right-col.center-text.box-wrap-center-around.col-65
        .col-100.test-frame
          h1.h4 {{unit.name}}
        .col-40.test-frame
          span cost <br>
          span {{unit.getActualCost() | number}}
        .col-40.test-frame
          span total cost <br>
          span {{unit.getCost() | number}}
        .col-40.test-frame
          span time <br>
          span {{unit.time | creation_time}}
        .col-40.test-frame
          span total time <br>
          span {{unit.getTime() | creation_time}}
        .col-100.test-frame.box-wrap-center-around
          .col-100.test-frame
            span housing space: 
            span {{unit.space}}
          .col-100.test-frame
            span units / time per building
          .col-50.test-frame
            span {{unit.amount}} / {{unit.getTime() | creation_time}}
          .col-50.test-frame
            span {{unit.amount}} / {{unit.getTime() | creation_time}}
          .col-50.test-frame
            span {{unit.amount}} / {{unit.getTime() | creation_time}}
          .col-50.test-frame
            span {{unit.amount}} / {{unit.getTime() | creation_time}}